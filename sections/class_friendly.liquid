<div class="page-width">
    <div class="main-content">
        <div class="left-text-box">
            <p class="text1 font-22 fw-400 lh-160 color-black">{{ section.settings.text1 }}</p>
            <p class="text2 font-22 fw-300 lh-160 color-black">{{ section.settings.text2 }}</p>
        </div>
        <div class="right-content">
            <h1 class="heading font-34 fw-700 m-0 color-black">{{ section.settings.heading }}</h1>
            {% if section.settings.image1 != blank %}
                <div class="image1">
                    <img src="{{ section.settings.image1 | image_url: width: 700 }}" alt="Original Image">
                </div>
            {% endif %}
        </div>
    </div>
    <div class="bottom-content">
        {% if section.settings.image2 != blank %}
            <div class="image2">
                <img src="{{ section.settings.image2 | image_url: width: 700 }}" alt="Original Image">
            </div>
        {% endif %}
        {% if section.settings.image3 != blank %}
            <div class="image3">
                <img src="{{ section.settings.image3 | image_url: width: 700 }}" alt="Original Image">
            </div>
        {% endif %}
    </div>
    <div class="right_bottom-text-box">
        <p class="text3 font-24 fw-500 lh-160 color-black">{{ section.settings.text3 }}</p>
    </div>
</div>
<div class="full-width">
    <div class="rectangle">
        <!-- <img src="{{ 'Rectangle1.png' | asset_url }}"> -->
    </div>
</div>

{% schema %}
{
    "name": "Class Friendly",
    "class": "class-friendly",
    "tag": "section",
    "settings": [
        {
            "type": "text",
            "id": "heading",
            "label": "Heading"
        },
        {
            "type": "textarea",
            "id": "text1",
            "label": "Text1"
        },
        {
            "type": "textarea",
            "id": "text2",
            "label": "Text2"
        },
        {
            "type": "textarea",
            "id": "text3",
            "label": "Text3"
        },
        {
            "type": "image_picker",
            "id": "image1",
            "label": "Image1"
        },
        {
            "type": "image_picker",
            "id": "image2",
            "label": "Image2"
        },
        {
            "type": "image_picker",
            "id": "image3",
            "label": "Image3"
        }
    ],
    "presets": [
        {
        "name": "Class Friendly"
        }
    ]
}
{% endschema %}