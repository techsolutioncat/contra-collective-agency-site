<div class="page-width d-flex">
    <div class="image-wrap w-50">
        {% if section.settings.left_image != blank %}
            <img class="left-image" src="{{ section.settings.left_image | image_url: width: 700 }}" alt="Original Image">
        {% endif %}
    </div>
    <div class="text-wrap w-50">
        <h1 class="heading font-36 fw-700 m-0 color-black">{{ section.settings.heading }}</h1>
        <div class="description font-18 fw-400 m-0 color-black">
            {{ section.settings.description }}
        </div>
        {% if section.settings.note != blank %}
            <div class="note m-40">
                <p class="font-24 fw-600 m-0 color-yellow">{{ '“' | append: section.settings.note | append: '”' }}</p>
            </div>
        {% endif %}
        {% if section.settings.brand_image != blank %}
            <div class="right-bottim-image m-40">
                <img src="{{ section.settings.brand_image | image_url: width: 700 }}" alt="Original Image">
            </div>
        {% endif %}
    </div>
</div>
<div class="right-effect"></div>

{% schema %}
{
    "name": "Left Image With Text",
    "class": "left_image-with-text-section",
    "tag": "section",
    "settings": [
        {
            "type": "text",
            "id": "heading",
            "label": "Heading"
        },
        {
            "type": "richtext",
            "id": "description",
            "label": "Description"
        },
        {
            "type": "image_picker",
            "id": "left_image",
            "label": "Left Image"
        },
        {
            "type": "textarea",
            "id": "note",
            "label": "Note"
        },
        {
            "type": "image_picker",
            "id": "brand_image",
            "label": "Brand Image"
        }
    ],
    "presets": [
        {
        "name": "Left Image With Text"
        }
    ]
}
{% endschema %}