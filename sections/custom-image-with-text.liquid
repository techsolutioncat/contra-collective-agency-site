<div class="page-width" id="who_we_are">
    <div class="main-content d-flex">
        <div class="text-box w-50">
            <h1 class="title font-48 fw-700 m-0 color-black">{{ section.settings.heading }}</h1>
            <h2 class="subtitle font-32 fw-300 m-0 color-black">{{ section.settings.subtitle }}</h2>
            <p class="description font-22 fw-400 m-0 color-black">{{ section.settings.description }}</p>
        </div>
        <div class="image-part w-50">
            {% if section.settings.image != blank %}
                <img class="desktop-image" src="{{ section.settings.image | image_url: width: 700 }}" alt="Original Image">
            {% endif %}
            {% if section.settings.mob_image != blank %}
                <img class="mobile-image" src="{{ section.settings.mob_image | image_url: width: 700 }}" alt="Original Image">
            {% endif %}
        </div>
    </div>
</div>
{% schema %}
{
    "name": "Custom Image With Text",
    "class": "custom_image-with-text-section",
    "tag": "section",
    "settings": [
        {
            "type": "text",
            "id": "heading",
            "label": "Heading"
        },
        {
            "type": "text",
            "id": "subtitle",
            "label": "Subtitle"
        },
        {
            "type": "textarea",
            "id": "description",
            "label": "Description"
        },
        {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
        },
        {
            "type": "image_picker",
            "id": "mob_image",
            "label": "Mobile Image"
        }
    ],
    "presets": [
        {
        "name": "Custom Image With Text"
        }
    ]
}
{% endschema %}