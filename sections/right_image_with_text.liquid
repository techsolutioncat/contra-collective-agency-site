<div class="page-width">
    <div class="image-part w-50">
        {% if section.settings.right_image != blank %}
            <img class="desktop-image" src="{{ section.settings.right_image | image_url: width: 700 }}" alt="Original Image">
        {% endif %}
    </div>
    <div class="main-content d-flex">
        <div class="text-box w-50">
            <h1 class="heading font-36 fw-700 m-0 color-black">{{ section.settings.heading }}</h1>
            <p class="description font-18 fw-400 m-0 color-black">{{ section.settings.description }}</p>
            <p class="description font-24 fw-600 m-0 color-yellow">{{ section.settings.note }}</p>
            {% if section.settings.brand_image != blank %}
                <img class="desktop-image" src="{{ section.settings.brand_image | image_url: width: 700 }}" alt="Original Image">
            {% endif %}
        </div>
    </div>
</div>
{% schema %}
{
    "name": "Right Image With Text",
    "class": "right_image-with-text-section",
    "tag": "section",
    "settings": [
        {
            "type": "text",
            "id": "heading",
            "label": "Heading"
        },
        {
            "type": "textarea",
            "id": "description",
            "label": "Description"
        },
        {
            "type": "image_picker",
            "id": "right_image",
            "label": "Right Image"
        },
        {
            "type": "textarea",
            "id": "note",
            "label": "Note"
        },
        {
            "type": "image_picker",
            "id": "brand_image",
            "label": "Brand Image"
        }
    ],
    "presets": [
        {
        "name": "Right Image With Text"
        }
    ]
}
{% endschema %}