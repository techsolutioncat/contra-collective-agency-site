<div class="full-width" style="background-image: url({{ section.settings.background | image_url: width: 2000 }})">
    <div class="page-width">
        <div class="main-content d-flex">
            <div class="left-content w-50">
                <div class="top-content-box">
                    <h1 class="heading font-48 fw-700 m-0 color-black lh-140">{{ section.settings.heading }}</h1>
                    <p class="font-24 fw-500 m-40 color-black lh-160">{{ section.settings.text1 }}</p>
                </div>
                <div class="bottom-content-box">
                    <div class="text-box">
                        <h1 class="heading font-22 fw-400 m-0 color-black lh-160">{{ section.settings.text2 }}</h1>
                        <p class="font-22 fw-300 m-40 color-black lh-160">{{ section.settings.text3 }}</p>
                    </div>
                    {% if section.settings.left_image != blank %}
                        <div class="left_image">
                            <img src="{{ section.settings.left_image | image_url: width: 700 }}" alt="Original Image">
                        </div>
                    {% endif %}
                </div>
            </div>
            <div class="right-content w-50">
                <p class="font-22 fw-400 m-0 color-black lh-160">{{ section.settings.text4 }}</p>
                {% if section.settings.right_image != blank %}
                    <div class="right_image">
                        <img src="{{ section.settings.right_image | image_url: width: 700 }}" alt="Original Image">
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
    <div class="image_right_bottom">
        {% if section.settings.image_right_bottom != blank %}
            <img src="{{ section.settings.image_right_bottom | image_url: width: 700 }}" alt="Original Image">
        {% endif %}
    </div>
</div>

{% schema %}
{
    "name": "Customer Experience",
    "class": "customer-experience",
    "tag": "section",
    "settings": [
        {
            "type": "text",
            "id": "heading",
            "label": "Heading"
        },
        {
            "type": "textarea",
            "id": "text1",
            "label": "Text1"
        },
        {
            "type": "textarea",
            "id": "text2",
            "label": "Text2"
        },
        {
            "type": "textarea",
            "id": "text3",
            "label": "Text3"
        },
        {
            "type": "textarea",
            "id": "text4",
            "label": "Text4"
        },
        {
            "type": "image_picker",
            "id": "background",
            "label": "Background Image"
        },
        {
            "type": "image_picker",
            "id": "left_image",
            "label": "Left Image"
        },
        {
            "type": "image_picker",
            "id": "right_image",
            "label": "Right Image"
        },
        {
            "type": "image_picker",
            "id": "image_right_bottom",
            "label": "Right Bottom Image"
        }
    ],
    "presets": [
        {
        "name": "Customer Experience"
        }
    ]
}
{% endschema %}