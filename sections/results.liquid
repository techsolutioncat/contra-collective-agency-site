<div class="page-width d-flex">
    <div class="left-content w-50">
        <h1 class="heading font-48 fw-700 lh-140 m-0 color-black">{{ section.settings.heading }}</h1>
        <p class="text2 font-24 fw-500 lh-160 color-black">{{ section.settings.subtitle }}</p>
        <div class="left-image">
            {% if section.settings.image != blank %}
                <img src="{{ section.settings.image | image_url: width: 700 }}" alt="Original Image">
            {% endif %}
        </div>
    </div>
    <div class="right-content w-50">
        <p class="text2 font-22 fw-400 lh-160 color-black">{{ section.settings.text1 }}</p>
        <p class="text2 font-22 fw-300 lh-160 color-black">{{ section.settings.text2 }}</p>
    </div>
</div>


{% schema %}
{
    "name": "Results",
    "class": "results",
    "tag": "section",
    "settings": [
        {
            "type": "text",
            "id": "heading",
            "label": "Heading"
        },
        {
            "type": "textarea",
            "id": "subtitle",
            "label": "Subtitle"
        },
        {
            "type": "textarea",
            "id": "text1",
            "label": "Text1"
        },
        {
            "type": "textarea",
            "id": "text2",
            "label": "Text2"
        },
        {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
        }
    ],
    "presets": [
        {
        "name": "Results"
        }
    ]
}
{% endschema %}