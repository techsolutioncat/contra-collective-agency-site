<div class="page-width d-flex">
    <div class="left-content w-50">
        <div class="top-text-box">
            {% if section.settings.text1 != blank %}
                <div class="font-22 fw-400 lh-160 m-0 color-black">{{ section.settings.text1 }}</div>
            {% endif %}
            {% if section.settings.text2 != blank %}
                <div class="font-22 fw-300 m-0 color-black">{{ section.settings.text2 }}</div>
            {% endif %}
        </div>
        <div class="bottom-content d-flex">
            {% if section.settings.left_image != blank %}
                <div class="left_image">
                    <img src="{{ section.settings.left_image | image_url: width: 700 }}" alt="Original Image">
                </div>
            {% endif %}
            <div class="bottom-text-box">
                <h1 class="heading font-32 fw-600 lh-140 color-black">{{ section.settings.text3 }}</h1>
                <p class="font-22 fw-300 m-0 color-black str-name">{{ section.settings.name }}</p>
                <p class="font-22 fw-600 m-0 color-black str-job">{{ section.settings.job }}</p>
            </div>
        </div>
    </div>
    <div class="right-content w-50">
        <h1 class="heading font-48 fw-700 lh-140 color-black m-0">{{ section.settings.heading }}</h1>
        {% if section.settings.right_image != blank %}
            <div class="right_image">
                <img src="{{ section.settings.right_image | image_url: width: 700 }}" alt="Original Image">
            </div>
        {% endif %}
    </div>
</div>
<div class="banner_image">
    {% if section.settings.banner_image != blank %}
        <img src="{{ section.settings.banner_image | image_url: width: 2000 }}" alt="Original Image">
    {% endif %}
</div>
{% schema %}
{
    "name": "Product About",
    "class": "product_about",
    "tag": "section",
    "settings": [
        {
            "type": "text",
            "id": "heading",
            "label": "Heading"
        },
        {
            "type": "richtext",
            "id": "text1",
            "label": "Text1"
        },
        {
            "type": "richtext",
            "id": "text2",
            "label": "Text2"
        },
        {
            "type": "text",
            "id": "text3",
            "label": "Text3"
        },
        {
            "type": "text",
            "id": "name",
            "label": "Name"
        },
        {
            "type": "text",
            "id": "job",
            "label": "job"
        },
        {
            "type": "image_picker",
            "id": "right_image",
            "label": "Right Image"
        },
        {
            "type": "image_picker",
            "id": "left_image",
            "label": "Left Image"
        },
        {
            "type": "image_picker",
            "id": "banner_image",
            "label": "Banner Image"
        }
    ],
    "presets": [
        {
        "name": "Product About"
        }
    ]
}
{% endschema %}